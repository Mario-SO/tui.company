{
	"name": "tui-company",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"dev": "astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"astro": "astro",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"lint:staged": "lint-staged",
		"typecheck": "astro check",
		"prepare": "simple-git-hooks",
		"quality": "bun run lint:fix && bun run format && bun run typecheck"
	},
	"dependencies": {
		"@astrojs/react": "^4.4.2",
		"@tailwindcss/vite": "^4.1.18",
		"astro": "^5.16.8",
		"astro-og-canvas": "^0.10.0",
		"framer-motion": "^12.25.0",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwindcss": "^4.1.18"
	},
	"devDependencies": {
		"@astrojs/check": "^0.9.4",
		"@biomejs/biome": "2.3.11",
		"lint-staged": "^15.5.2",
		"simple-git-hooks": "^2.11.1",
		"typescript": "^5.9.2"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,mjs,cjs,json}": "biome check --write"
	},
	"simple-git-hooks": {
		"pre-commit": "bun run lint:staged"
	}
}
